{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "target": "ES5",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
