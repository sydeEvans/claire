{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES5",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "exclude": ["node_modules"]
}
